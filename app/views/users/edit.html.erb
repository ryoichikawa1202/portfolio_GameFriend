<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">プロフィール編集</h5>
      <div class="form-body p-4">
      <% if @user.errors.any? %>
        <ul class="alert alert-danger" role="alert">
          <h6 class="alert-heading">
            <%= @user.errors.count %>件のエラーが発生しました
          </h6>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前", class: "form-control name"%>
        </div>
        <div class="form-group">
          <label for="inputImage">ProfileImage</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", class: "form-control-file user_image" , accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
        <hr>
        <div class="form-group">
          <%= link_to "退会する", quit_path(@user), class: "btn btn-danger" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>